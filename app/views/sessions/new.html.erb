<p id="alert"><%= alert %></p>
<h1 align="center">Login</h1>
<%= form_tag sessions_path, class: "form-horizontal" do |form| %>
  <div class="form-group" align="center">
    <div class="control-label col-sm-2">
      <%= label_tag :email %>
    </div>

    <div class="col-sm-8">
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="form-group" align="center">
    <div class="control-label col-sm-2">
      <%= label_tag :password %>
    </div>

    <div class="col-sm-8">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="form-group" align="center">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="actions">
        <%= submit_tag "Login" %>
      </div>
    </div>
  </div>

<% end %>
